<p id="notice"><%= notice %></p>

<h1>Preguntas</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <!-- <th>Description</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @presentations.each do |presentation| %>
      <tr>
        <td><%= link_to presentation.title, presentation %></td>
        <td><%= presentation.description %></td>
        <!-- <td></%=  'Show',  %></td> -->
        <%- if admin_signed_in? %>
          <td><%= link_to 'Editar', edit_presentation_path(presentation) %></td>
        <% end %>
        <%- if admin_signed_in? %>
          <td><%= link_to 'Eliminar', presentation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
